{{> partials/header }}

<div class="row">
  <div class="container">
    <h2 class="bg-dark text-light p-2">{{ category }}</h2>
  </div>
  <!--campo para trazer o conteÃºdo-->
  {{#data}}
<div class="col-12">
  <div class="card mb-3 bg-light shadow">
    <div class="row g-0">
      <div class="col-md-3">
        <img
          src="https://image.tmdb.org/t/p/w500/{{ poster_path }}"
          class="img-fluid rounded-start rounded m-3"
          alt="Card image cap"
        />
      </div>
      <div class="col-md-9">
        <div class="card-body mx-3">
          <h5 class="card-title">{{ title }}</h5>
          <p class="card-text text-justify">{{ overview }}</p>
          <p class="card-text">
            <small class="text-muted">{{ release_date }}</small>
          </p>
          <p><a href="/">Voltar para home</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

  {{/data}}
</div>

{{> partials/footer }}
